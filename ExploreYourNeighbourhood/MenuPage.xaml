<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ExploreYourNeighbourhood.MenuPage" 
    Title="Home"
    Icon="menu_ico.png">
            

    <ContentPage.Content>
        <StackLayout>
            <Label Text="Find these things in your neighbourhood" HorizontalOptions="Center" Margin="0,20,0,0">
                    <Label.FontFamily>
        <OnPlatform x:TypeArguments="x:String">
            <OnPlatform.iOS>AppleSDGothicNeo-Bold  </OnPlatform.iOS>
            <OnPlatform.Android></OnPlatform.Android>
        </OnPlatform>
    </Label.FontFamily>

            </Label>
            <ListView   x:Name="listView" HasUnevenRows="true">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ImageCell Text="{Binding Name}"
                        Detail="{Binding Difficulty}" 
                        DetailColor="{Binding Colour}" ImageSource="{Binding ImgSrc}"></ImageCell> 
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout> 
        
    </ContentPage.Content>
</ContentPage>